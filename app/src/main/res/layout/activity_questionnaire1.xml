<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="221dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="Questionnaire"
        android:textAlignment="center"
        android:textColor="#601FAB"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="01/09"
        android:textColor="#061352"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="388dp"
        android:layout_height="524dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="457dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:text="Whatâ€™s the main symptom bringing you here today?"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/img1"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="17dp"
                        android:elevation="30dp"
                        android:src="@drawable/question1_1" />

                    <TextView
                        android:id="@+id/opt1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="7dp"
                        android:text="Bloating or feeling bloated"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/img2"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/img1"
                        android:elevation="30dp"
                        android:src="@drawable/question1_2" />

                    <TextView
                        android:id="@+id/opt2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img2"
                        android:layout_marginLeft="71dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/opt1"
                        android:text="Abdominal Pain"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/img3"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/opt1"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:elevation="30dp"
                        android:src="@drawable/question1_3" />

                    <TextView
                        android:id="@+id/opt3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img3"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="7dp"
                        android:text="Constipated"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/img4"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/opt2"
                        android:layout_marginLeft="103dp"
                        android:layout_marginTop="26dp"
                        android:layout_toRightOf="@+id/img3"
                        android:elevation="30dp"
                        android:src="@drawable/question1_4" />

                    <TextView
                        android:id="@+id/opt4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img2"
                        android:layout_marginLeft="67dp"
                        android:layout_marginTop="134dp"
                        android:layout_toRightOf="@+id/opt1"
                        android:text="Abdominal Pain"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/img5"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/opt3"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:elevation="30dp"
                        android:src="@drawable/question1_5" />

                    <TextView
                        android:id="@+id/opt5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img5"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="7dp"
                        android:text="Other gastrointestinal reason"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="59dp"
        android:layout_height="65dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>